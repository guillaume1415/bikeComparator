{% extends 'base.html.twig' %}

{% block title %}Comparateur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row body__content-container">

            <!-- MENU_LEFT -->
            <div class="col-xl-2 col-md-3 col-sm-4 bg-white border-right pt-3">
                {{ include('comparator/menu_left.html.twig') }}

                {{ form_start(form) }}
                <div class="form-row align-items-end ">
                    <div class="col">
                        {{ form_row(form.MaxPrice) }}

                        {{ form_row(form.MinPrice) }}

                        {{ form_row(form.Mark) }}

                        <div class="form-group">
                            <button class="btn btn-primary">Recherche</button>
                        </div>
                    </div>

                </div>
                {{ form_end(form) }}
            </div>
            <!-- MENU_LEFT END-->

            <!-- BODY_ARTICLE -->
            <div class="col-xl-10 col-md-9 col-sm-8  mb-5 pt-2">

                <h5 class="text-center titelMenuOption my-5 d-none d-lg-block">The world largest bike comparison site</h5>

                <div id="cbp-vm" class="cbp-vm-switcher cbp-vm-view-grid">
                    <!-- NAVBAR OPTION -->
                    <div class="row cbp-vm-options mx-0 border d-flex flex-row-reverse">
                        <!-- bare de navigation de vue -->
                        <div class="cbp-vm-options d-none d-lg-block">
                            <a href="#" class="cbp-vm-icon cbp-vm-grid cbp-vm-selected"
                               data-view="cbp-vm-view-grid">Grid View</a>
                            <a href="#" class="cbp-vm-icon cbp-vm-list" data-view="cbp-vm-view-list">List View</a>
                        </div>
                        <!-- bare de navigation de vue -->

                        <!-- filtre affichage -->
                        <div class="form-group my-0 px-3 d-none d-lg-block">
                            <select id="" class="form-control select-sorting p-0" name="">
                                <option value="">
                                    Meilleures ventes
                                </option>
                                <option value="">
                                    Prix : ordre croissant
                                </option>
                                <option value="">
                                    Prix : ordre décroissant
                                </option>
                                <option value="">
                                    Ajouté récemment
                                </option>
                                <option value="">
                                    Remise
                                </option>
                                <option value="">
                                    Marque
                                </option>
                                <option value="">
                                    Évaluations des clients
                                </option>
                                <option value="">
                                    Produits : A à Z
                                </option>
                                <option value="">
                                    Produits : Z à A
                                </option>
                            </select>
                        </div>
                        <!-- filtre affichage -->
                    </div>
                    <!-- NAVBAR OPTION END -->

                    <ul>
                        {% for i in 0..2 %}
                           
                            <li class="border card">
                                <a class="cbp-vm-image card-img-top " href="#"><img src="{{ asset('img/Ross.jpg') }}"></a>

                                <a class="cbp-vm-title card-title" href="">Vélo de route De Rosa SK R8050 (Ultegra, 2019)</a>
                                <div class="cbp-vm-details card-text ">
                                    Silver beet shallot wakame tomatillo salsify mung bean beetroot groundnut. <br>
                                    <small class="text-muted">★ ★ ★ ★ ☆</small>
                                </div>
                                <div class="cbp-vm-price">4 489,99 €</div>
                                <a class="cbp-vm-icon cbp-vm-add" href="#">Add to Favorite</a>
                            </li>
                            <li class="border card">
                                <a class="cbp-vm-image card-img-top" href="#"><img src="{{ asset('img/cub.jpg') }}"></a>

                                <a class="cbp-vm-title card-title" href="">Cube Litening C:68X Race Road Bike (2020)</a>
                                <div class="cbp-vm-details card-text">
                                    Taking your road game to the highest level, this streamlined and speedy Litening bike by
                                    Cube utilises its carbon-build <br>
                                    <small class="text-muted">★ ★ ★ ★ ★ </small>
                                </div>
                                <div class="cbp-vm-price">4 499,00 €</div>
                                <a class="cbp-vm-icon cbp-vm-add" href="#">Add to Favorite</a>
                            </li>
                            <li class="border card">
                                <a class="cbp-vm-image card-img-top" href="#"><img src="{{ asset('img/conlago.jpg') }}"></a>

                                <a class="cbp-vm-title card-title" href="">Vélo de route Colnago CRS (Ultegra, 2019)</a>
                                <div class="cbp-vm-details card-text">
                                    Offrant des performances exceptionnelles grâce à un cadre en carbone de haute qualité et
                                    équipé de superbes composants <br>
                                    <small class="text-muted">★ ★ ★ ★ ☆</small>
                                </div>
                                <div class="cbp-vm-price">2 629,99 €</div>
                                <a class="cbp-vm-icon cbp-vm-add" href="#">Add to Favorite</a>
                            </li>
                            <li class="border card">
                                <a class="cbp-vm-image card-img-top" href="#"><img src="{{ asset('img/wilier.jpg') }}"></a>

                                <a class="cbp-vm-title card-title" href="">Vélo de Course WILIER TRIESTINA CENTO1 NDR (105 2019)</a>
                                <div class="cbp-vm-details card-text">
                                    Le vélo de course WILIER TRIESTINA Cento1 NDR est le modèle destiné à l'endurance du
                                    constructeur italien. <br>
                                    <small class="text-muted">★ ★ ★ ★ ☆</small>
                                </div>
                                <div class="cbp-vm-price">1 999,99 €</div>
                                <a class="cbp-vm-icon cbp-vm-add" href="#">Add to Favorite</a>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="container mt-4">
                        <h1>Voir tous nos biens</h1>

                        <div class="row">
                            {% for property in properties %}
                                <div class="col-md-4">
                                    {% include('comparator/_property.html.twig') %}
                                </div>

                            {% endfor %}

                            <div class="pagination">
                                {{ knp_pagination_render(properties) }}
                            </div>
                        </div>
                    </div>
                    <!--  -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}